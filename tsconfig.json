{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "@types",
    "node_modules",
    "eslint.config.mjs",
    "src/**/*.test.ts"
  ],
  "ts-node": {
    "files": true
  }
}
